<h2>Sign up</h2>

<%= form_for :user, url: registration_path(resource_name) do |f| %>
  <%#= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% @password = Faker::Internet.password(6) %>
  <%= hidden_field_tag :user_password, @password, name: "user[password]" %>
  <%= hidden_field_tag :user_password_confirmation, @password %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>