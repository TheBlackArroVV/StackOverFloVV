= form_for @question, remote: true do |f|
  - if @question.errors.any?
    %h2
      = pluralize(@question.errors.count, "error")
      prohibited this train from being saved:
    %ul
      - @question.errors.full_messages.each do |message|
        %li= message

  = f.label :title
  = f.text_field :title

  = f.label :body
  = f.text_field :body

  = f.submit "#{ @question.new_record? ? 'Create question' : 'Update question' }", class: 'submit_question_form'
